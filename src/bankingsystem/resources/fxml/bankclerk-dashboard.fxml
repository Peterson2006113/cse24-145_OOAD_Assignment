<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:id="bankClerkDashboardPane"
            prefWidth="700" prefHeight="450">
    <top>
        <Label text="Bank Clerk Dashboard" BorderPane.alignment="CENTER"
               style="-fx-font-size:20;-fx-font-weight:bold;-fx-padding:10;"/>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding:20;">
            <children>
                <TableView fx:id="customerTable" prefWidth="650" prefHeight="300"/>
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="openAccountButton" text="Open New Account"/>
                    <Button fx:id="viewCustomerDetailsButton" text="View Customer Details"/>
                    <Button fx:id="logoutButton" text="Logout"
                            style="-fx-background-color:#ff6666;-fx-text-fill:white;"/>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
