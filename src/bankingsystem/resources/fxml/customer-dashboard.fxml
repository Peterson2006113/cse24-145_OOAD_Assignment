<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:id="customerDashboardPane"
            prefWidth="600" prefHeight="400">
    <top>
        <Label text="Customer Dashboard" BorderPane.alignment="CENTER"
               style="-fx-font-size:20;-fx-font-weight:bold;-fx-padding:10;"/>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding:20;">
            <children>
                <ListView fx:id="accountListView" prefHeight="250" prefWidth="500"/>
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="viewTransactionsButton" text="View Transactions"/>
                    <Button fx:id="logoutButton" text="Logout"
                            style="-fx-background-color:#ff6666;-fx-text-fill:white;"/>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
