<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:id="accountOpeningPane"
          alignment="CENTER" hgap="10" vgap="10" style="-fx-padding:20;">
    <children>
        <Label text="Open Account for Customer" GridPane.columnSpan="2"
               style="-fx-font-size:18;-fx-font-weight:bold;"/>

        <Label text="Customer ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="customerIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Account Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="accountNumberField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Account Type:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="accountTypeCombo" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Savings Account"/>
                    <String fx:value="Investment Account"/>
                    <String fx:value="Cheque Account"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Branch:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="branchField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Button fx:id="submitButton" text="Create Account"
                GridPane.rowIndex="5" GridPane.columnIndex="1"
                style="-fx-background-color:#009688;-fx-text-fill:white;"/>
    </children>
</GridPane>
